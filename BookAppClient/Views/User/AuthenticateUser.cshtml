@{
    ViewBag.Title = "User Authentication";
}

<div class="container" style="max-width: 400px; margin-top: 50px;">
    <div class="card shadow-sm">
        <div class="card-body">
            <!-- Header inside the Card -->
            <div class="text-center mb-4">
                <h1>BookApp</h1>
                <h4>User Authentication</h4>
            </div>

            <!-- Form Start -->
            @using (Html.BeginForm("AuthenticateUser", "User", FormMethod.Post))
            {
                <div class="form-group mb-3">
                    @Html.Label("Email", new { @class = "form-label" })
                    @Html.TextBox("email", null, new { @class = "form-control", placeholder = "Enter your email", required = "required" })
                </div>

                <div class="form-group mb-3">
                    @Html.Label("Password", new { @class = "form-label" })
                    @Html.Password("password", null, new { @class = "form-control", placeholder = "Enter your password", required = "required" })
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <button type="submit" class="btn btn-primary">Login</button>
                    @Html.ActionLink("Sign Up", "AddUser", "User", null, new { @class = "btn btn-secondary" })
                </div>
            }

            <!-- Error Message -->
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger mt-3">
                    @ViewBag.ErrorMessage
                </div>
            }
        </div>
    </div>
</div>

