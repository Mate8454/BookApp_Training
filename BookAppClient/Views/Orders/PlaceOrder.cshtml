
@model BookAppClient.Models.Orders

@{
    ViewBag.Title = "Place Order";
}

<h2>Place Order</h2>

@using (Html.BeginForm("PlaceOrder", "Orders", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="deliveryAddress">Delivery Address</label>
        <input type="text" class="form-control" id="deliveryAddress" name="deliveryAddress" required />
    </div>

    <input type="hidden" name="userId" value="@Session["UserId"]" />

    <button type="submit" class="btn btn-primary">Place Order</button>
}
<div class="text-center mt-4">
    <button class="btn btn-outline-warning" onclick="window.history.back();">Go Back</button>
</div>


